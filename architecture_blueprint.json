    "build": {
      "desktop": "cd src/desktop && cargo build --release",
      "core": "cd src/core_rust && cargo build --release",
      "python_ffi": "cd src/core_rust && maturin develop --release --features python",
      "tests": "cd src/core_rust && cargo test",
      "benchmarks": "cd src/core_rust && cargo bench"
