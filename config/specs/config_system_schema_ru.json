{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Схема системы конфигурации",
  "description": "Схема для валидации структуры системы конфигурации проекта",
  "type": "object",
  "definitions": {
    "ConfigFormat": {
      "type": "string",
      "enum": ["yaml", "yml", "json"],
      "description": "Поддерживаемые форматы конфигурации"
    },
    "EnvironmentType": {
      "type": "string",
      "enum": ["development", "testing", "production"],
      "description": "Тип окружения"
    },
    "ConfigMetadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Версия конфигурации в формате semver"
        },
        "description": {
          "type": "string",
          "description": "Подробное описание назначения конфигурации"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "Время последнего обновления в формате ISO 8601"
        },
        "environment": {
          "$ref": "#/definitions/EnvironmentType",
          "description": "Целевое окружение для конфигурации"
        },
        "deprecated": {
          "type": "boolean",
          "default": false,
          "description": "Устарела ли данная конфигурация"
        },
        "replaced_by": {
          "type": "string",
          "description": "Путь к новой версии конфигурации, если текущая устарела"
        }
      },
      "required": ["version", "environment"]
    },
    "ConfigEntry": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "description": "Уникальное имя конфигурации в нижнем регистре с подчеркиваниями"
        },
        "path": {
          "type": "string",
          "pattern": "^config/.+\\.(ya?ml|json)$",
          "description": "Относительный путь к файлу конфигурации от корня проекта (например, config/core/token_graph.yaml)"
        },
        "format": {
          "$ref": "#/definitions/ConfigFormat",
          "description": "Формат файла конфигурации"
        },
        "scope": {
          "type": "string",
          "enum": ["core", "application", "infrastructure", "interfaces", "environment", "specs"],
          "description": "Область применения конфигурации (соответствует каталогам в config/*)"
        },
        "required": {
          "type": "boolean",
          "default": true,
          "description": "Обязательная ли конфигурация для работы системы"
        },
        "sensitive": {
          "type": "boolean",
          "default": false,
          "description": "Содержит ли конфигурация чувствительные данные"
        },
        "default": {
          "type": ["object", "array", "string", "number", "boolean", "null"],
          "description": "Значения по умолчанию для необязательных полей"
        },
        "validation_schema": {
          "type": "string",
          "pattern": "^config/specs/.+\\.json$",
          "description": "Путь к JSON-схеме для валидации конфигурации (например, config/specs/graph_cdna_spec.json)"
        },
        "metadata": {
          "$ref": "#/definitions/ConfigMetadata"
        }
      },
      "required": ["name", "path", "format", "scope"],
      "additionalProperties": false
    },
    "ConfigGroup": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "description": "Уникальное имя группы в нижнем регистре с подчеркиваниями"
        },
        "description": {
          "type": "string",
          "description": "Подробное описание назначения группы конфигураций"
        },
        "configs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConfigEntry"
          },
          "minItems": 1,
          "description": "Список конфигураций, входящих в группу"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Список имен групп, от которых зависит данная группа"
        },
        "environment_specific": {
          "type": "boolean",
          "default": false,
          "description": "Зависит ли группа от окружения"
        },
        "metadata": {
          "$ref": "#/definitions/ConfigMetadata"
        }
      },
      "required": ["name", "configs"],
      "additionalProperties": false
    },
    "ConfigSystem": {
      "type": "object",
      "properties": {
        "base_path": {
          "type": "string",
          "default": "config",
          "description": "Базовый путь к директории с конфигурациями"
        },
        "environment": {
          "$ref": "#/definitions/EnvironmentType",
          "description": "Текущее окружение выполнения"
        },
        "groups": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConfigGroup"
          },
          "minItems": 1,
          "description": "Список групп конфигураций"
        },
        "metadata": {
          "$ref": "#/definitions/ConfigMetadata"
        }
      },
      "required": ["environment", "groups"]
    }
  },
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0.0",
      "description": "Версия схемы конфигурации"
    },
    "environment": {
      "type": "string",
      "description": "Окружение по умолчанию",
      "default": "development"
    },
    "base_path": {
      "type": "string",
      "description": "Базовый путь к конфигурациям",
      "default": "config"
    },
    "specs_path": {
      "type": "string",
      "description": "Путь к директории со спецификациями",
      "default": "config/specs"
    },
    "groups": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ConfigGroup"
      },
      "description": "Группы конфигураций"
    },
    "metadata": {
      "$ref": "#/definitions/ConfigMetadata"
    }
  },
  "required": ["version", "groups"]
}
